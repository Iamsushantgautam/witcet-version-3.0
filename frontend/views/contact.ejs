<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Witcet</title>
    <!-- bootsrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- css -->
     <link rel="stylesheet" href="/css/styles.css">
     <link rel="stylesheet" href="/css/contact.css">
     <link rel="stylesheet" href="/css/help.css">
     <script src="../script.js"></script>
     <!-- font -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

</head>
<body>

    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <header class="bg-primary text-white text-center py-4">
        <h1 class="mb-0">Contact US</h1>
        <p class="lead">Get the assistance you need to make the most of Witcet</p>
    </header>

    <main class="container my-5">
        <!-- Telegram Channel Button for Fast Reply -->
        <div class="text-center mb-4">
            <div class="telegram-alert" style="max-width: 600px; margin: 0 auto;">
                <h4><i class="fab fa-telegram"></i> Need Fast Reply?</h4>
                <p>Join our Telegram channel for instant support and quick responses!</p>
                <a href="https://t.me/+mKi_iF1EsEg2MDU1" target="_blank" class="btn btn-light btn-lg mt-2" style="background: white; color: #0088cc; font-weight: bold; text-decoration: none;">
                    <i class="fab fa-telegram"></i> Join Telegram Channel
                </a>
            </div>
        </div>

        <!-- Contact Form Section -->
        <section class="contact-section">
            <div class="container-contact">
                <h1 class="text-center"><span>Send us a Message</span></h1>
                <p class="subtitle">Fill out the form below and we'll get back to you as soon as possible</p>
                
                <form id="contactForm" class="contact-form" method="POST" action="https://formsubmit.co/witcet@zohomail.in">
                    <!-- FormSubmit Configuration -->
                    <input type="hidden" name="_subject" value="New Contact Form Submission from Witcet">
                    <input type="hidden" name="_captcha" value="false">
                    <input type="hidden" name="_next" value="">
                    <input type="hidden" name="_template" value="box">
                    
                    <div class="form-group">
                        <label for="name">Your Name *</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Your Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="subject">Subject *</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" name="message" rows="6" required></textarea>
                    </div>
                    
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i> Send Message
                    </button>
                </form>

                <!-- Success Message (hidden by default) -->
                <div id="successMessage" class="alert alert-success" style="display: none; margin-top: 20px; text-align: center;">
                    <h4><i class="fas fa-check-circle"></i> Message Sent Successfully!</h4>
                    <p>Thank you for contacting us! We've received your message and will get back to you soon.</p>
                </div>
            </div>
        </section>

             
        
    </main>

    <div class="space"></div>

    <%- include('partials/footer') %>

    <script>
        // Handle form submission with AJAX to prevent redirect
        document.getElementById('contactForm').addEventListener('submit', async function(e) {
            e.preventDefault(); // Prevent default form submission and redirect
            
            const form = this;
            const formData = new FormData(form);
            const submitBtn = form.querySelector('.submit-btn');
            const successMessage = document.getElementById('successMessage');
            const originalText = submitBtn.innerHTML;
            
            // Update button to show loading state
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            submitBtn.disabled = true;
            
            // Hide any previous success message
            successMessage.style.display = 'none';

            try {
                // Submit form to FormSubmit using fetch API
                const response = await fetch('https://formsubmit.co/ajax/witcet@zohomail.in', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    // Show success message
                    successMessage.style.display = 'block';
                    
                    // Reset form
                    form.reset();
                    
                    // Scroll to success message
                    successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    
                    // Auto-hide success message after 2 seconds
                    setTimeout(function() {
                        successMessage.style.display = 'none';
                    }, 2000);
                } else {
                    alert('Failed to send message. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again later.');
            } finally {
                // Reset button
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
    </script>

</body>
</html>
