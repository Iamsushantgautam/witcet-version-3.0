<div class="d-flex justify-content-center align-items-center vh-10">
    <div class="container">
        <div class="row justify-content-center g-4">

            <% courses.slice(0, 6).forEach(course => { %>
                <div class="col-md-4 notice-item" data-category="<%= course.tag %>">
                   <div class="card text-center h-100 shadow-sm">
                       <img src="../images/<%= course.image %>" class="card-img-top" alt="...">
                       <div class="card-body d-flex flex-column align-items-center">
                           <h5 class="card-title"><%= course.name %></h5>
                           <a href="<%=course.pageLink %>" class="btn btn-primary"><i class="fa fa-download" aria-hidden="true"></i> Download</a>
                       </div>
                   </div>
               </div> 
           
               <% }); %>
   
          



        </div>
    </div>
  </div>
<!-- some notes end -->
